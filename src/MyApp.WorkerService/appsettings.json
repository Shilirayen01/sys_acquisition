{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\MSSQLSERVER01;Database=OpcUaData;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "OpcSettings": {
    "UseSimulator": true
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicName": "opc-ua-data",
    "ClientId": "opc-ua-producer"
  },
  "BatchSettings": {
    "FlushIntervalSeconds": 10
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/opc-ua-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}